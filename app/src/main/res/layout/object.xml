<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    style="@style/linearParent"
    android:gravity="center"
    android:padding="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor">

        <TextView
            android:layout_weight="2"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:id="@+id/tv"
            android:fontFamily="sans-serif-light"
            android:textColor="#E91E63"
            tools:ignore="Suspicious0dp" />

        <ImageView
            android:layout_weight="6"
            android:id="@+id/imageView"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:ignore="Suspicious0dp" />

        <LinearLayout
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/whiteCardColor"
            tools:ignore="Suspicious0dp">

                <Button
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:id="@+id/cirBrowserView"
                    style="@style/loginButton"
                    android:text="browser view" />

                <Button
                    android:layout_marginTop="3dp"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:id="@+id/cirDownload"
                    style="@style/loginButton"
                    android:text="download" />

                <Button
                    android:layout_marginTop="3dp"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:id="@+id/cirImageTagging"
                    style="@style/loginButton"
                    android:text="Image Tagging"/>

                <Button
                    android:layout_marginTop="3dp"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:id="@+id/cirDelete"
                    style="@style/loginButton"
                    android:text="delete"/>

                <Button
                    android:layout_marginTop="3dp"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:id="@+id/cirPolicy"
                    style="@style/loginButton"
                    android:text="add policy"/>


        </LinearLayout>
</LinearLayout>